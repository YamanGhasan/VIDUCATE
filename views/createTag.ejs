<%- include('./layouts/sMainLayout', {title: "Tag" , css: ["/css/tag.css"] }) %>


    <div class='tagTable'>
        <form class="form" action="/tag/create" method="post">
            <h1>Create Tag</h1>
            <div class="mb-3">

                <h5>Title </h5>
                <input type="text" pattern=^[a-zA-Z0-9_ ]*$ minlength="5" maxlength="60" name='name' required /><br><br>

                <h5>Description </h5>
                <input type="text" name='description' pattern=^[a-zA-Z0-9_ ]*$ maxlength="300" required />
                <br><br>
                <button class="btn  btn-dark" type="submit">submit</button>
        </form>

        <%- include('./layouts/eMainLayout',{ js: ["../controllers/controllerTag"] }) %>
